# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted to native line endings on checkout
*.ts text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.prisma text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc text eol=lf
tsconfig.json text eol=lf
package.json text eol=lf
pnpm-lock.yaml text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Denote all files that are truly binary and should not be modified
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Archives
*.jar binary
*.war binary
*.ear binary

# Exclude files from export (git archive)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.idea export-ignore
*.md export-ignore
docs/ export-ignore
